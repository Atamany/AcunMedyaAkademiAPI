@model AcunMedyaAkademiWebUI.DTOs.CreateProductDTO
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"   />

<div class="Container">
    <br /><br />

    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Resim (URL)</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Kategori ID</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>